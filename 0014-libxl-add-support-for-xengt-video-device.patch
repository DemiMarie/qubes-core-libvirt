+                <attribute name="type">
+                  <value>xengt</value>
+                </attribute>
+                <optional>
+                  <attribute name="low_gm_sz">
+                    <ref name="unsignedInt"/>
+                  </attribute>
+                </optional>
+                <optional>
+                  <attribute name="high_gm_sz">
+                    <ref name="unsignedInt"/>
+                  </attribute>
+                </optional>
+                <optional>
+                  <attribute name="fence_sz">
